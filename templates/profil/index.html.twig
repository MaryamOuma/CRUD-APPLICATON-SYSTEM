{# templates/agent/multi_step_form.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">

           
                        <form method="post" action="{{ path('app_profil') }}">

                            {# Render each form field with Bootstrap styling #}
                            <div class="mb-3">
                                {{ form_label(form.Profil, 'Profil', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.Profil) }}
                            </div>

                            

                            {# Submit button with Bootstrap styling #}
                             <button type="button"  class="btn btn-secondary-custom" onclick="goToPreviousPage()">Previous</button>
                            <button type="submit" class="btn btn-custom">Submit</button>
                 
                        </form>
                 
               

            </div>
        </div>
    </div>
    
    <script>
        function goToPreviousPage() {
        
          
             window.history.back();
        }
    </script>

  
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Custom button color */
        .btn-custom {
            background-color: #ee3d26;
            border-color: #ee3d26;
              color:#fff;
        }
          .btn-secondary-custom {
               background-color:  #777777;
               border-color: #777777;
               color:#fff;
          }
       
    </style>
{% endblock %}
